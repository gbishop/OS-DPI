{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "./*"
      ],
      "components/*": [
        "./components/*"
      ]
    },
    "moduleResolution": "bundler",
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ]
  },
  "exclude": [
    "node_modules",
    "docs",
    "thinking",
    "OS-DPI",
    "public",
    "components/headmouse/tracky-mouse",
    "dist"
  ]
}
